<!DOCTYPE html>
<html lang="en">
<!--Header-->
<%- include('layout/header');-%>

    <body>
        <!-- Navigation-->
        <%- include('layout/navbar')-%>
            <!-- Page Header-->
            <header class="masthead">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="page-heading">
                                <h1>Appointment</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <main id="mb-4">
                <div class="container px-4 px-lg-5">
                    <form id="appointment" method="POST" action="/update/Appointment">
                        <% if (user){ %>
                            <div class="form-group">
                                <input type="hidden" name="date" id="date">
                                <input type="hidden" name="_id" id="userId" value="<%= user._id%>">
                                <label for="date">Date</label>
                                <div id="calendarPK"></div>
                            </div>

                            <div class="form-group" id="editAppointment">
                                <label for="time">Book Appointment:</label>
                                <input type="text" class="form-control" name="time" id="time" required readonly>
                                <p>Available: <% %>
                                </p>
                                <input type="hidden" name='isTimeSlotAvailable' id="availiblity" value="False">
                                <input type="hidden" name='appointmentId' id="appointmentId">
                </div>
                <% } %>
                    <button type="submit" class="btn btn-primary">Confirm Appointment Booking</button>
                    </form>
                    </div>

            </main>
            <!-- Footer-->
            <%- include('layout/footer')-%>
                <!--sCRIPTS-->
                <%- include('layout/script')-%>
    </body>
</html>